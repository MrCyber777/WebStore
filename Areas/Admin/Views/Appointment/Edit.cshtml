@model WebStore.Models.ViewModel.AppointmentDetailsViewModel
@using WebStore.Extensions
@using WebStore.Utility
@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-info">Edit Appointment</h2>
<form method="post" enctype="multipart/form-data">
    <div class="border rounded p-4 row">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Appointment.Id" />

        <div class="col-6">
            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Appointment.AppointmentDay"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Appointment.AppointmentDay" class="form-control" />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Appointment.CustomerName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Appointment.CustomerName" class="form-control" />
                </div>
                <span asp-validation-for="Appointment.CustomerName" class="text-danger"></span>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Appointment.CustomerPhoneNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Appointment.CustomerPhoneNumber" class="form-control" />
                </div>
                <span asp-validation-for="Appointment.CustomerPhoneNumber" class="text-danger"></span>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Appointment.CustomerEmail"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Appointment.CustomerEmail" class="form-control" disabled />
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Appointment.SalesPerson"></label>
                </div>
                @if (User.IsInRole(SD.SuperAdminEndUser))
                {
                    <div class="col-8">
                       
                        <select asp-for="Appointment.SalesPersonID" asp-items='Model.SalesPersons.ToSelectListItem(Model.Appointment.SalesPersonID)' class="form-control">
                            <option value="">Select a SalesPerson</option>
                        </select>
                    </div>
                }
            else if(User.IsInRole(SD.AdminEndUser))
            {
            <div class="col-8">
                <input asp-for="Appointment.SalesPerson.Name" class="form-control" disabled />
            </div>
            }

            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Appointment.IsConfirmed"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Appointment.IsConfirmed" class="form-control" style="width: 15px" />
                </div>
            </div>
        </div>
        <div class="col-6">
            <partial name="_AppointmentProductDetailsPartial" model="@Model.Products" />
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Appointment.Id" value="Edit" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
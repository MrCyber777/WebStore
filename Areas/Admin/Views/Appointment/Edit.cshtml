@model WebStore.Models.Appointment
@{
    ViewData["Title"] = "Edit";
}

<h2 class="text-info">Edit Appointment</h2>
<form method="post">
    <div class="border rounded p-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <div class="row form-group">
            <div class="col-3">
                <label asp-for="AppointmentDay"></label>
            </div>
            <div class="col-7">
                <input asp-for="AppointmentDay" class="form-control" />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-3">
                <label asp-for="CustomerName"></label>
            </div>
            <div class="col-7">
                <input asp-for="CustomerName" class="form-control" />
            </div>
            <span asp-validation-for="CustomerName" class="text-danger"></span>
        </div>

        <div class="row form-group">
            <div class="col-3">
                <label asp-for="CustomerPhoneNumber"></label>
            </div>
            <div class="col-7">
                <input asp-for="CustomerPhoneNumber" class="form-control" />
            </div>
            <span asp-validation-for="CustomerPhoneNumber" class="text-danger"></span>
        </div>

        <div class="row form-group">
            <div class="col-3">
                <label asp-for="CustomerEmail"></label>
            </div>
            <div class="col-7">
                <input asp-for="CustomerEmail" class="form-control" disabled />
            </div>
        </div>

        <div class="row form-group">
            <div class="col-3">
                <label asp-for="IsConfirmed"></label>
            </div>
            <div class="col-7">
                <input asp-for="IsConfirmed" class="form-control" style="width: 15px" />
            </div>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-primary" asp-route-id="@Model.Id" value="Edit" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>

@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
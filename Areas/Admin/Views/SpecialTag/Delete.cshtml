@model WebStore.Models.SpecialTag
@{
    ViewData["Title"] = "Delete";
}

<h1 class="mt-1 text-info">Delete special tag type</h1>
<form method="post" asp-action="Delete">
    <div class="p-4 border rounded">
        <div class="row form-group">
            <div class="col-2">
                <label asp-for="Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" disabled />
            </div>
        </div>
        <br />

        <div class="form-group">
            <input type="submit" asp-route-id="@Model.Id" class="btn btn-danger" value="Delete" />
            <a class="btn btn-success" asp-action="Index">Back to list</a>
        </div>
    </div>
</form>
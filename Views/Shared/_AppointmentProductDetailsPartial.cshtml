@model List<WebStore.Models.Product>

@if (Model.Count > 0)
{
<table class="table table-striped" style="width: 100%" >
    <thead class="text-center table-info">
        <tr>
            <th style="width:20%"></th>
            <th><label asp-for="@Model.FirstOrDefault().Name"></label></th>
            <th><label asp-for="@Model.FirstOrDefault().Price"></label></th>
            <th><label asp-for="@Model.FirstOrDefault().ShadeColor"></label></th>
            <th><label asp-for="@Model.FirstOrDefault().ProductTypes.Name"></label></th>
        </tr>
    </thead>
    <tbody>
      @foreach (var item in Model)
      {
        <tr class="text-center p-5">
            <td class="align-middle">
                <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                    <img class="image-product-style" src="@item.Image" />
                </a>
            </td>
            <td class="align-middle">@Html.DisplayFor(x => item.Name)</td>          
            <td class="align-middle">@String.Format("{0:C}", item.Price)</td>
            <td class="align-middle">@Html.DisplayFor(x => item.ShadeColor)</td>
            <td class="align-middle">@Html.DisplayFor(x => item.ProductTypes.Name)</td>
        </tr>
      }
    </tbody>
</table>
}
else 
{ 
    <div class="alert alert-danger text-center">
        No items added to the shopping cart...
    </div>
}